- if product.errors.any?
  %h3 Uppss we have a problem
= form_for product do |f|
  = f.label :name
  = f.text_field :name
  %span.error= product.errors[:name].join(', ')
  %br/
  = f.label :category_id
  = collection_select :product, :category_id, categories, :id, :name
  %span.error= product.errors[:category_id].join(', ')
  %br/
  = f.label :descritpion
  = f.text_area :description, cols: 30, rows: 5
  %br/
  = f.label :price
  = f.text_field :price
  %span.error= product.errors[:price].join(', ')
  %br/
  = f.label :active
  = f.check_box :active, checked_value: true, unchecked_value: false
  %br/
  = f.submit 'Save'
