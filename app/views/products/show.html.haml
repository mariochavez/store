%h1 Product
- if @product.nil?
  %h3 Product not found
- else
  %p= link_to 'Edit', edit_product_path(@product)
  %p
    %span Name:
    = @product.name
  %p
    %span Category:
    = @product.try(:category).try(:name)
  %p
    %span Description:
    = @product.description
  %p
= link_to 'Back', :back
